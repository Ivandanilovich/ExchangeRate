<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"


        android:id="@+id/constrateRoot">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rateName" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/rateFlag"
    />
    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/rateFlag"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="USD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateAbbreviation" app:layout_constraintStart_toEndOf="@+id/rateFlag"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/rateFlag"
            app:layout_constraintBottom_toBottomOf="@+id/rateFlag"
            android:textSize="24dp"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageSale"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imagePurchase"
            app:layout_constraintStart_toEndOf="@+id/textPurchase"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSale" app:layout_constraintEnd_toStartOf="@+id/imageSale"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageSale"
            app:layout_constraintBottom_toBottomOf="@+id/imageSale"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPurchase" app:layout_constraintEnd_toStartOf="@+id/textSale"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toEndOf="@+id/rateAbbreviation"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imagePurchase"
            app:layout_constraintBottom_toBottomOf="@+id/imagePurchase"/>
</android.support.constraint.ConstraintLayout>